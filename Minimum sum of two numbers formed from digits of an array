#include <bits/stdc++.h>
using namespace std;

int main() 
{ 
    int a[] = {5, 3, 0, 7, 4 }; 
    int n = sizeof(a) / sizeof(a[0]); 
   int sum1=0,sum2=0;
   sort(a,a+n);
   for(int i=0;i<n;i++)
   {
       if(i%2==0)
       sum1=sum1*10+a[i];
       else
       sum2=sum2*10+a[i];
   }
   cout<<sum1+sum2;
    return 0; 
}

OUTPUT:-
sum  is 82
