#include <iostream>
#include<string.h>
using namespace std;
int main()
{
    string s="abcde";
    cout<<"string before reversing is: "<<s;
    int i=0,j=s.length()-1;
    while(i<j)
    {
        char temp=s[j];
        s[j]=s[i];
        s[i]=temp;
        i++;j--;
    }
    cout<<"\nstring after reversing is:"<<s;
    return 0;
}
